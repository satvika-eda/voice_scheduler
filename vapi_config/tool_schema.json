        },
        "name": {
          "description": "Person name",
          "type": "string"
        },
        "time": {
          "description": "24 hour time HH:MM",
          "type": "string"
        },
        "title": {
          "description": "Meeting title",
          "type": "string"
        },
        "duration": {
          "description": "Meeting duration in minutes as integer string",
          "type": "string"
        }
